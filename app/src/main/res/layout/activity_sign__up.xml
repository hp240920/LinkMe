<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbars="vertical"
    android:layout_height="match_parent"
    android:layout_width="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".Sign_Up">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="6dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    app:srcCompat="@mipmap/ic_launcher" />

                <Button
                    android:id="@+id/change_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile" />

                <Button
                    android:id="@+id/delete_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete Profile" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="30px"
                    android:layout_marginRight="15px"
                    android:text="Full Name/Comapany Name: "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:layout_marginBottom="10px"
                    android:ems="10"
                    android:hint="Name..."
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="30px"
                    android:layout_marginRight="15px"
                    android:text="Phone Number: "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/phoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:layout_marginBottom="10px"
                    android:editable="false"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="+15512147895" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="30px"
                    android:layout_marginRight="15px"
                    android:text="Email:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:layout_marginBottom="10px"
                    android:ems="10"
                    android:hint="xyz@gmail.com"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="30px"
                    android:layout_marginRight="15px"
                    android:text="Website:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:layout_marginBottom="10px"
                    android:ems="10"
                    android:hint="website link"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="30px"
                    android:layout_marginRight="15px"
                    android:text="Instagram Id: "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/insta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:layout_marginBottom="10px"
                    android:ems="10"
                    android:hint="insta id..."
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="30px"
                    android:layout_marginRight="15px"
                    android:text="SnapChat Id: "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/snap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:layout_marginBottom="10px"
                    android:ems="10"
                    android:hint="snapchat id"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="30px"
                    android:layout_marginRight="15px"
                    android:text="LinkedIn Website: "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/linkedin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:layout_marginBottom="10px"
                    android:ems="10"
                    android:hint="linkedin..."
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="30px"
                    android:layout_marginRight="15px"
                    android:text="GitHub:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/github"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:layout_marginBottom="10px"
                    android:ems="10"
                    android:hint="github url..."
                    android:inputType="textPersonName" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:text="Save Info"
             />
    </LinearLayout>
</ScrollView>